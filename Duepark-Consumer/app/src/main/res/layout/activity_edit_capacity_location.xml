<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Location.Edit.EditCapacityLocationActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:minHeight="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true">

        <ImageView
            android:id="@+id/backBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_back"
            android:layout_marginEnd="8dp"/>

        <TextView
            android:id="@+id/editTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:gravity="center_vertical"
            android:padding="4dp"
            android:textColor="@color/white"
            android:textSize="20sp" />

    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:id="@+id/changeTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto"
        android:textStyle="bold"
        android:padding="2dp"
        android:textSize="22sp"
        android:text="Change Location Capacity"
        android:layout_marginStart="18dp"
        android:layout_marginTop="24dp"
        android:layout_alignParentStart="true"
        android:layout_below="@id/toolbar"/>

    <TextView
        android:id="@+id/currentTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto"
        android:padding="2dp"
        android:textSize="18sp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="10dp"
        android:layout_alignParentStart="true"
        android:layout_below="@id/changeTV"/>

    <!--<TextView
        android:id="@+id/newTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto"
        android:padding="2dp"
        android:text="Select Capacity For"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginStart="18dp"
        android:layout_marginTop="24dp"
        android:layout_alignParentStart="true"
        android:layout_below="@id/currentTV"/>

    <Spinner
        android:id="@+id/vehicleSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/btn_shape_light"
        android:padding="20dp"
        android:layout_below="@id/newTV"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"/>-->

    <View android:id="@+id/strut"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/carTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto"
        android:padding="2dp"
        android:text="Car"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginStart="18dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="10dp"
        android:layout_alignEnd="@id/strut"
        android:layout_alignParentStart="true"
        android:layout_below="@id/currentTV"/>

    <TextView
        android:id="@+id/bikeTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto"
        android:padding="2dp"
        android:text="Bike"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="24dp"
        android:layout_alignStart="@id/strut"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/currentTV"/>

    <EditText
        android:id="@+id/carET"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto"
        android:maxLength="4"
        android:background="@drawable/btn_shape_light"
        android:padding="10dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="10dp"
        android:layout_below="@id/carTV"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@id/strut"/>

    <EditText
        android:id="@+id/bikeET"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto"
        android:maxLength="4"
        android:background="@drawable/btn_shape_light"
        android:padding="10dp"
        android:layout_marginEnd="18dp"
        android:layout_marginTop="14dp"
        android:layout_marginStart="10dp"
        android:layout_below="@id/carTV"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@id/strut"/>

    <Button
        android:id="@+id/saveBtn"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="Save Changes"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:fontFamily="@font/roboto"
        android:background="@drawable/btn_shape"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="34dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_below="@id/carET"/>

</RelativeLayout>