<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="165dp"
    android:layout_gravity="center"
    android:background="@color/white"
    android:elevation="2dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cash Earning"
        android:textSize="18sp"
        android:textColor="@color/grey"
        android:fontFamily="@font/roboto"
        android:layout_marginTop="24dp"
        android:layout_marginStart="24dp"
        android:padding="4dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"/>

    <TextView
        android:id="@+id/totalCashEarningTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@color/colorPrimary"
        android:fontFamily="@font/roboto"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:padding="4dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Online Earning"
        android:textSize="18sp"
        android:textColor="@color/grey"
        android:fontFamily="@font/roboto"
        android:layout_marginTop="8dp"
        android:layout_marginStart="24dp"
        android:padding="4dp"
        android:layout_alignParentStart="true"
        android:layout_below="@id/totalCashEarningTV"/>

    <TextView
        android:id="@+id/totalOnlineEarningTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@color/colorPrimary"
        android:fontFamily="@font/roboto"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="24dp"
        android:padding="4dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/totalCashEarningTV"/>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_below="@id/totalOnlineEarningTV"
        android:background="@drawable/shadow"
        android:layout_marginStart="22dp"
        android:layout_marginEnd="22dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Earning"
        android:textSize="18sp"
        android:textStyle="bold"
        android:fontFamily="@font/roboto"
        android:layout_marginTop="8dp"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="24dp"
        android:padding="4dp"
        android:layout_alignParentStart="true"
        android:layout_below="@id/view"
        android:layout_alignParentBottom="true"/>

    <TextView
        android:id="@+id/totalEarningTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:fontFamily="@font/roboto"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"
        android:padding="4dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/view"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>